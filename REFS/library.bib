journal = {Stem cells (Dayton, Ohio)},
month = feb,
pmid = {24496776},
title = {{Adult stem cells in the small intestine are intrinsically programmed with their location-specific function.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/24496776},
year = {2014}
}
