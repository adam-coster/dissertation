file = {:C$\backslash$:/Users/adam/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Eskiocak et al. - 2011 - Functional parsing of driver mutations in the colorectal cancer genome reveals numerous suppressors of anchorag.pdf:pdf},
issn = {1538-7445},
journal = {Cancer research},
month = apr,
pmid = {21527559},
title = {{Functional parsing of driver mutations in the colorectal cancer genome reveals numerous suppressors of anchorage-independent growth.}},
